<div class="list-wrap">
  <h1>Books</h1>
  
<% @books.each do |book| %>
  <div class="book-list">
    <span class="book-body"><%= book.body %></span>
    <span class="book-title"><%=link_to book.title, book_path(book.id) %></span>
  </div>
<% end %>
</div>

<h1>New book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>